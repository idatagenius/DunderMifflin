<h1 style="text-align: center; margin-top: 30px;">Orders</h1>
<ul>
    <table class="table table-hover" style="outline: 1px solid black;">
        <thead>
          <tr class="table-primary">
            <th scope="col">Name</th>
            <th scope="col">Product</th>
            <th scope="col">Amount</th>
            <th scope="col">Employee</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
            <% for(let order of orders) {%>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.product %></td>
            <td><%= order.amount %></td>
            <td><%= order.employee %></td>
            <% if (order.status == 'In Progress') { %>
                <td class="badge badge-warning"><%= order.status %></td>
            <% } else if (order.status == 'Completed') { %>
                <td class="badge badge-success"><%= order.status %></td>
            <% } else { %>
                <td class="badge badge-danger"><%= order.status %></td>
            <% } %>
          </tr>
          <% } %>
        </tbody>
      </table>
</ul>